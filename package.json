{
	"name": "vmfa-ai-organizer",
	"version": "0.1.7",
	"description": "AI-powered media organization add-on for Virtual Media Folders",
	"author": "Per Soderlind",
	"license": "GPL-2.0-or-later",
	"scripts": {
		"build": "wp-scripts build src/js/index.js --output-path=build",
		"start": "wp-scripts start src/js/index.js --output-path=build",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"lint:js": "wp-scripts lint-js src/js",
		"lint:css": "wp-scripts lint-style src/js/styles",
		"format": "wp-scripts format src/js",
		"packages-update": "wp-scripts packages-update",
		"i18n": "npm run i18n:make-pot && npm run i18n:update-po && npm run i18n:make-mo && npm run i18n:make-json && npm run i18n:make-php",
		"i18n:make-pot": "wp i18n make-pot . languages/vmfa-ai-organizer.pot --exclude=node_modules,vendor,tests,build --domain=vmfa-ai-organizer",
		"i18n:update-po": "wp i18n update-po languages/vmfa-ai-organizer.pot languages/",
		"i18n:make-mo": "wp i18n make-mo languages/",
		"i18n:make-json": "wp i18n make-json languages/ --no-purge --use-map=i18n-map.json",
		"i18n:make-php": "wp i18n make-php languages/"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.1",
		"@vitejs/plugin-react": "^5.1.2",
		"@wordpress/eslint-plugin": "^23.0.0",
		"@wordpress/scripts": "^31.2.0",
		"jsdom": "^27.4.0",
		"vitest": "^4.0.16"
	},
	"dependencies": {
		"@wordpress/api-fetch": "^7.37.0",
		"@wordpress/components": "^31.0.0",
		"@wordpress/element": "^6.37.0",
		"@wordpress/i18n": "^6.10.0",
		"@wordpress/icons": "^11.4.0"
	}
}