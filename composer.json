{
	"name": "soderlind/vmfa-ai-organizer",
	"description": "AI-powered media organization add-on for Virtual Media Folders",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Per Soderlind",
			"email": "per@soderlind.no"
		}
	],
	"keywords": [
		"wordpress",
		"wordpress-plugin",
		"media-library",
		"ai",
		"openai",
		"azure-openai",
		"anthropic",
		"claude",
		"gemini",
		"ollama",
		"grok",
		"exo",
		"image-recognition",
		"media-organization",
		"virtual-folders"
	],
	"require": {
		"php": ">=8.3",
		"woocommerce/action-scheduler": "^3.7",
		"yahnis-elsts/plugin-update-checker": "^5.6"
	},
	"require-dev": {
		"brain/monkey": "^2.6",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"mockery/mockery": "^1.6",
		"pestphp/pest": "^3.0",
		"phpcompatibility/php-compatibility": "^9.0",
		"wp-coding-standards/wpcs": "^3.0"
	},
	"autoload": {
		"psr-4": {
			"VmfaAiOrganizer\\": "src/php/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"VmfaAiOrganizer\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"lint:php": "phpcs -p",
		"fix:php": "phpcbf -p",
		"test": "pest",
		"test:phpunit": "phpunit",
		"test:coverage": "pest --coverage --coverage-html coverage"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"pestphp/pest-plugin": true
		},
		"sort-packages": true
	}
}